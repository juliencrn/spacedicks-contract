{
  "name": "ntf-collectible",
  "version": "1.0.0",
  "description": "",
  "main": "truffle-config.js",
  "engines": {
    "node": "16.13.0"
  },
  "workspaces": [
    "./api",
    "./website"
  ],
  "scripts": {
    "clean": "lerna run clean && lerna clean -y",
    "bootstrap": "lerna bootstrap",
    "prebuild": "npm run copy-contract",
    "build": "lerna run --scope api build --stream",
    "start": "lerna run --scope api start --stream",
    "predev": "npm run copy-contract",
    "dev": "lerna run dev --stream",
    "copy-contract": "npm-run-all --parallel \"copy-contract:*\"",
    "copy-contract:api": "cp -r ./abis/CryptoDicks.json ./api/src/contracts/CryptoDicks.json",
    "copy-contract:site": "cp -r ./abis/CryptoDicks.json ./website/src/contracts/CryptoDicks.json",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "NFT",
    "Typescript",
    "Rest",
    "Express",
    "dapp",
    "solidity",
    "web3",
    "IPFS",
    "React",
    "Next.js",
    "svg"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@openzeppelin/contracts": "^4.3.2",
    "@truffle/hdwallet-provider": "^1.7.0",
    "dotenv": "^10.0.0"
  },
  "devDependencies": {
    "@openzeppelin/test-helpers": "^0.5.15",
    "chai": "^4.3.4",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "truffle-assertions": "^0.9.2",
    "truffle-plugin-verify": "^0.5.18"
  }
}
